<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="用户名" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextUsername"
        android:hint="密码"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/edit_captcha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextPassword"
        android:hint="验证码" />

    <ImageView
        android:id="@+id/image_captcha"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_below="@+id/edit_captcha"
        android:layout_marginBottom="-154dp" />


    <Button
        android:id="@+id/button_check"
        android:layout_width="110dp"
        android:layout_height="62dp"
        android:layout_alignBottom="@+id/edit_captcha"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="-80dp"
        android:text="登录" />

    <Button
        android:id="@+id/buttonChangeUsername"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginTop="250dp"
        android:text="修改用户名" />

    <Button
        android:id="@+id/buttonChangePassword"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginLeft="106dp"
        android:layout_marginTop="250dp"
        android:layout_toRightOf="@+id/buttonChangeUsername"
        android:text="修改密码" />


</RelativeLayout>
